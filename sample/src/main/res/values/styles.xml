<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="android:colorPrimary">@color/primary</item>
    <item name="android:colorPrimaryDark">@color/primary_dark</item>
    <item name="android:colorAccent">@color/accent</item>
  </style>

  <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:colorPrimary">@color/primary</item>
    <item name="android:colorPrimaryDark">@color/primary_dark</item>
    <item name="android:colorAccent">@color/accent</item>
    <item name="android:textColorPrimary">@color/finestBlack</item>
    <item name="android:textColorSecondary">@color/finestSilver</item>
  </style>


  <style name="RedTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:colorPrimary">@color/redPrimary</item>
    <item name="android:colorPrimaryDark">@color/redPrimaryDark</item>
    <item name="android:colorAccent">@color/finestWhite</item>
    <item name="android:textColorPrimary">@color/finestWhite</item>
    <item name="android:textColorSecondary">@color/finestSilver</item>
  </style>

</resources>
